  "version": "0.2.0",
  "configurations": [
    {
      "name": "(scooby-core) Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/packages/scooby-core/node_modules/.bin/jest",
        "--runInBand",
        "--coverage",
        "false"
      ],
      "cwd": "${workspaceFolder}/packages/scooby-core",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
  ]
}