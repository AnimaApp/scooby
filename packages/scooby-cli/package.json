{
  "name": "@animaapp/scooby-cli",
  "version": "1.14.0",
  "description": "A CLI to use Scooby, a visual and E2E testing framework",
  "author": "Federico Terzi @federico-terzi-anima",
  "bin": {
    "scooby": "./bin/run"
  },
  "homepage": "https://github.com/AnimaApp/scooby/packages/scooby-cli",
  "main": "dist/index.js",
  "repository": "AnimaApp/scooby",
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@animaapp/scooby-core": "^1.14.0",
    "@oclif/core": "^1.16.4",
    "@oclif/errors": "^1.3.6",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.1.1",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "@types/node": "^16.11.63",
    "oclif": "^3",
    "shx": "^0.3.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.3.1",
    "typescript": "^4.8.4"
  },
  "oclif": {
    "bin": "scooby",
    "dirname": "scooby",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ]
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "clean": "rm -Rf ./dist && rm -f tsconfig.tsbuildinfo",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "yarn build && oclif manifest && oclif readme",
    "version": "oclif readme && git add README.md"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": "https://github.com/federico-terzi-anima/hello-world/issues",
  "keywords": [
    "oclif"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "types": "dist/index.d.ts"
}
