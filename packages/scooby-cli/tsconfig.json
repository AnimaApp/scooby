{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2019",
    "esModuleInterop": true,
    "paths": {
      "@animaapp/scooby-core": ["../scooby-core"],
      "@animaapp/scooby-github-status": ["../scooby-github-status"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../scooby-core" },
    { "path": "../scooby-github-status" }
  ]
}
