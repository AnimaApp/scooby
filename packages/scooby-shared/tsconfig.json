{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "module": "CommonJS",
    "declaration": true,
    "resolveJsonModule": true,
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": [
      "es2019"
    ],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "__tests__",
    "dist"
  ]
}